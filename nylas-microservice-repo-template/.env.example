# Nylas API Service Configuration
NYLAS_CLIENT_ID=your_client_id_here
NYLAS_CLIENT_SECRET=your_api_key_here
NYLAS_API_URL=https://api.us.nylas.com
NYLAS_SERVICE_PORT=3001
NYLAS_SERVICE_HOST=0.0.0.0

# OAuth Configuration
NYLAS_REDIRECT_URI=http://localhost:3001/oauth/callback
NYLAS_SUCCESS_REDIRECT=http://localhost:5173/settings/integrations?connected=true
NYLAS_ERROR_REDIRECT=http://localhost:5173/settings/integrations?error=auth_failed

# Nylas Webhooks Service Configuration
NYLAS_WEBHOOK_PORT=3002
NYLAS_WEBHOOK_HOST=0.0.0.0
NYLAS_WEBHOOK_SECRET=your_webhook_secret_here

# Database (for webhooks)
MONGODB_URI=mongodb://localhost:27017/singularitybridge

# Environment
NODE_ENV=development
