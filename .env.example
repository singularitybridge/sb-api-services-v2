# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DB_NAME=your_mongodb_database_name_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Application Configuration
PORT=3000
ADMIN_UI_URL=http://localhost:5173 # Or your admin UI URL

# Integration Loader Configuration
# Comma-separated list of integrations to enable. Leave empty to enable all integrations with HTTP routes.
# Example: ENABLED_INTEGRATIONS=nylas,linear,sendgrid
# Default (empty): All integrations with register() function will be loaded
ENABLED_INTEGRATIONS=

# Nylas Microservices Configuration
# Connection URLs for Nylas microservices (Fastify-based)
# Development: Uses localhost URLs (default)
# Production: Update to your service URLs (e.g., http://nylas-service:3001)
NYLAS_SERVICE_URL=http://127.0.0.1:3001        # Nylas microservice (OAuth, Calendar, Contacts, Email)
WEBHOOKS_SERVICE_URL=http://127.0.0.1:3002     # Webhooks processing microservice
NYLAS_CLIENT_TIMEOUT=30000                      # HTTP client timeout in milliseconds (default: 30000)

# Agents API Configuration (JSON-based API for calendar, contacts, email)
# Enable/disable the entire Agents API module
ENABLE_AGENTS_API=true

# Logging configuration for Agents API
AGENTS_API_LOG_REQUESTS=true          # Log all API requests to database
AGENTS_API_LOG_RESPONSES=true         # Log response bodies (may be large)
AGENTS_API_LOG_CLAUDE_ACTIVITY=true   # Track Claude Code decision-making activities
AGENTS_API_LOG_TTL_DAYS=30            # Days to keep logs before auto-deletion (TTL)

# Endpoints when enabled:
#   POST /api/agents/calendar  - Calendar operations (check_availability, schedule_meeting, find_available_slot)
#   POST /api/agents/contacts  - Contact operations (find_contacts, get_contact, create_contact, update_contact, delete_contact)
#   POST /api/agents/email     - Email operations (send_email, find_emails, get_email, mark_email_read)
#   GET  /api/agents/health    - Health check endpoint
#   GET  /api/agents/info      - API information endpoint

# Security Keys
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here
JWT_SECRET=your_strong_jwt_secret_here
BETA_INVITE_KEY=your_beta_invite_key_here

# Invite System Configuration
ALLOW_AUTO_SIGNUP=false # Set to true to allow automatic company creation for new users without invites (default: false)

# Pusher Configuration
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
PUSHER_CLUSTER=your_pusher_cluster_here
PUSHER_USE_TLS=true # Set to true or false

# --- Optional Environment Variables ---
# If you use additional services, you might need their respective keys.
# The application is designed to run without these, but functionality will be limited.
# Examples:
# OPENAI_API_KEY=your_openai_api_key_here
# G_CLIENT_ID=your_google_oauth_client_id_for_login_here
# G_CLIENT_SECRET=your_google_oauth_client_secret_for_login_here
# CLIENT_ID=your_google_oauth_client_id_for_calendar_here
# CLIENT_SECRET=your_google_oauth_client_secret_for_calendar_here
# REDIRECT_URL=your_google_oauth_redirect_url_for_calendar_here
# TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
# TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_INDEX=your_pinecone_index_name_here
# GCP_STORAGE_BUCKET=your_gcp_storage_bucket_name_here
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
# INTERNAL_API_TOKEN=a_secure_token_for_internal_api_calls

# Logging Configuration (Optional - will default if not set)
# LOG_LEVEL=info # Log level: error, warn, info, http, verbose, debug, silly
# LOG_FORMAT=simple # Log format: simple (for development) or json (for production)
# ENABLE_FILE_LOGGING=false # Set to true to enable file logging in production

# Node Environment (Optional - will default to 'development' if not set)
# NODE_ENV=development # or 'production'
