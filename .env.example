# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DB_NAME=your_mongodb_database_name_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Application Configuration
PORT=3000
ADMIN_UI_URL=http://localhost:5173 # Or your admin UI URL

# Security Keys
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here
JWT_SECRET=your_strong_jwt_secret_here

# Invite System Configuration
ALLOW_AUTO_SIGNUP=false # Set to true to allow automatic company creation for new users without invites (default: false)

# Pusher Configuration
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
PUSHER_CLUSTER=your_pusher_cluster_here
PUSHER_USE_TLS=true # Set to true or false

# Clerk Authentication Configuration
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# --- Optional Environment Variables ---
# If you use additional services, you might need their respective keys.
# The application is designed to run without these, but functionality will be limited.
# Examples:
# OPENAI_API_KEY=your_openai_api_key_here
# G_CLIENT_ID=your_google_oauth_client_id_for_login_here (deprecated - use Clerk instead)
# G_CLIENT_SECRET=your_google_oauth_client_secret_for_login_here (deprecated - use Clerk instead)
# CLIENT_ID=your_google_oauth_client_id_for_calendar_here
# CLIENT_SECRET=your_google_oauth_client_secret_for_calendar_here
# REDIRECT_URL=your_google_oauth_redirect_url_for_calendar_here
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_INDEX=your_pinecone_index_name_here
# GCP_STORAGE_BUCKET=your_gcp_storage_bucket_name_here
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
# INTERNAL_API_TOKEN=a_secure_token_for_internal_api_calls

# Logging Configuration (Optional - will default if not set)
# LOG_LEVEL=info # Log level: error, warn, info, http, verbose, debug, silly
# LOG_FORMAT=simple # Log format: simple (for development) or json (for production)
# ENABLE_FILE_LOGGING=false # Set to true to enable file logging in production

# Node Environment (Optional - will default to 'development' if not set)
# NODE_ENV=development # or 'production'
